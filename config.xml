<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquin.kaur0550.playr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>kaur0550-playr</name>
    <description>
        This cordova Android app will be a SPA that shows a scrollable playlist of audio files.
    </description>
    <author email="kaur0550@algonquinlive.com" href="http://cordova.io">
        Anoopinder Kaur
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
